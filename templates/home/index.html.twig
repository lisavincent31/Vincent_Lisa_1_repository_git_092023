{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<main class="homepage">
    <div class="container-fluid p-0 position-relative" id="homepage">
        <img class="bd-placeholder-img vh-100" src="https://picsum.photos/id/256/2000/900" width="100%" height="100%" />
        <div class="container">
            <div class="carousel-caption text-start text-dark" style="top:7rem!important;">
                <h1>Créer du contenu !</h1>
                <p>Aidez-nous à découvrir de nouveaux tricks en créant un nouvel article.</p>
                <p><a class="btn btn-lg btn-primary rounded" href="/register">Inscrivez-vous aujourd'hui</a></p>
            </div>
            <div class="container position-absolute bottom-0">
                <a href="#tricks_container" type="button" class="btn btn-lg float-end rounded-circle">
                    <i class="bi bi-arrow-down-circle-fill text-primary"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-5 px-4" id="tricks_container">
        <div class="row">
            {% for trick in tricks %}
                <div class="card col-md-3 mx-2 mb-3 p-0">
                    <img src="https://picsum.photos/250/150" class="card-img-top rounded-top">
                    <div class="card-body d-flex justify-content-around">
                        {# <p class="card-text">{{ trick.content[:50] ~ '...' }}</p> #}
                        <a href="/trick/{{ trick.id }}">
                            <h3 class="card-title">{{ trick.name }}</h3>
                        </a>
                        {% if (app.user) %}
                            {% if (app.user.id == trick.author.id) %}
                                <button type="button" class="btn btn-outline-success">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="container float-end">
            <a href="#homepage" type="button" class="btn btn-lg float-end rounded-circle">
                <i class="bi bi-arrow-up-circle-fill text-primary"></i>
            </a>
        </div>
    </div>
</main>
{% endblock %}